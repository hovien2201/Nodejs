
<h2 class="d-flex justify-content-center align-items-center">List Product</h2>
<div class="row mt-3 mx-4">
    <div class="col-2 p-0">
        <div class="sidebarProduct">
            <ul class="productNavigate">
                <li>
                    <a href="/create">Create Product</a>
                </li>
                <li>
                    <a href="/">List Product</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-10">
        <table class="table table-hover">
            <thead>
            <tr>
                 <th >Image</th>
                <th >Product</th>
                <th >Price</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each product}}
                <tr>
                    <td>
                        <img src='/image/{{this.image}}' alt="" style="height: auto;width: 5rem;">
                    </td>
                    <td>{{this.name}}</td>
                    <td>{{this.price}} $</td>
                    <td>{{this.type.name}}</td>
                    <td>
                        <a href="/{{this.id}}" class="btn btn-info">Detail</a>
                        <a href="/edit/{{this._id}}" class="btn btn-warning">Update</a>
                        <button type="button" class="btn btn-danger"
                                onclick="deleteProduct('{{this._id}}','{{this.name}}')"
                                data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Delete
                        </button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteProductForm" method="post">
                <div class="modal-body">

                    <p> You confirm the removal of product <span style="color: red" id="productName"></span> ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function deleteProduct(id, name) {
        document.getElementById('productName').innerText = name
        let deleteProductForm = document.getElementById('deleteProductForm')
        deleteProductForm.action = '/delete/' + id + '?_method=DELETE'
    }

